<html lang="en">
    <body>
    <form method="post" action="/insertNewProduct">
        <label for="newName">Product Name: </label>
        <input type="text" name="newName" id="newName" required>
        <br>
        <label for="newDescription">Description: </label>
        <input type="text" name="newDescription" id="newDescription" required>
        <br>
        <label for="newPrice">Price: </label>
        <input type="number" step="0.01" name="newPrice" id="newPrice" required>
        <br>
        <label for="newReleaseDate">Release Date: </label>
        <input type="date" name="newReleaseDate" id="newReleaseDate" required>
        <br>
        <label for="newLocation">Location: </label>
        <select name="newLocation" id="newLocation">
            <% locations.forEach(location => { %>
                <option value="<%= location.id %>"> <%= location.name %></option>
            <% }) %>
        </select>
        <br>
        <label for="newSupplier">Supplier: </label>
        <select name="newSupplier" id="newSupplier">
            <% suppliers.forEach(supplier => { %>
                <option value="<%= supplier.id %>"> <%= supplier.name %> </option>
            <% })%>
        </select>
        <br>
        <label for="newCategory">Category: </label>
        <select name="newCategory" id="newCategory">
            <% categories.forEach(category => { %>
                <option value="<%= category.id %>"> <%= category.name %> </option>
            <% })%>
        </select>
        <br>
        <button type="submit">Insert</button>
    </form>
    </body>
</html>